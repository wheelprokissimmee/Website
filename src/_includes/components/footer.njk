<script>
  var openText = "Closed";

  var d = new Date();

  if (d.getDay() > 0 && d.getDay() <= 6) {
    var currentHour = d.getHours();
    if (currentHour > 10 && currentHour < 17) {
      openText = "Open";
      $(".storeOpen").css("color", "#62f256");
    } else {
      openText = "Closed";
      $(".storeOpen").css("color", "red");
    }
  } else {
    openText = "Closed for the weekend.";
  }

  $(".storeOpen").text(openText);
</script>
